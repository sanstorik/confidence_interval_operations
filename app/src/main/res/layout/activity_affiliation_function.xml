<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/textView12"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/a_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1.5"
            android:background="@drawable/border"
            android:contentDescription="a2"
            android:ems="10"
            android:hint="0"
            android:inputType="number|numberSigned|numberDecimal"
            android:textColor="@color/text_color"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/b_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1.5"
            android:background="@drawable/border"
            android:contentDescription="c1"
            android:ems="10"
            android:hint="0"
            android:inputType="number|numberSigned|numberDecimal"
            android:textColor="@color/text_color"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/c_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1.5"
            android:background="@drawable/border"
            android:contentDescription="c2"
            android:ems="10"
            android:hint="0"
            android:inputType="number|numberSigned|numberDecimal"
            android:textColor="@color/text_color"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/a1_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1.5"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="0"
            android:inputType="number|numberSigned|numberDecimal"
            android:textColor="@color/text_color"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/a2_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1.5"
            android:background="@drawable/border"
            android:contentDescription="a2"
            android:ems="10"
            android:hint="0"
            android:inputType="number|numberSigned|numberDecimal"
            android:textColor="@color/text_color"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/c1_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1.5"
            android:background="@drawable/border"
            android:contentDescription="c1"
            android:ems="10"
            android:hint="0"
            android:inputType="number|numberSigned|numberDecimal"
            android:textColor="@color/text_color"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/c2_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1.5"
            android:background="@drawable/border"
            android:contentDescription="c2"
            android:ems="10"
            android:hint="0"
            android:inputType="number|numberSigned|numberDecimal"
            android:textColor="@color/text_color"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1.2"
            android:lines="1"
            android:text="Triangular A"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:typeface="serif" />

        <EditText
            android:id="@+id/numA_left_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1.5"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="0"
            android:inputType="number|numberSigned|numberDecimal"
            android:textColor="@color/text_color"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/c1_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1.5"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="0"
            android:inputType="number|numberSigned|numberDecimal"
            android:textColor="@color/text_color"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/c2_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1.5"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="0"
            android:inputType="number|numberSigned|numberDecimal"
            android:textColor="@color/text_color"
            android:textSize="25sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input triangular values"
        android:textAlignment="center"
        android:textSize="25sp"
        android:id="@+id/textView9" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="10dp"
        android:text="Input two-sided Gauss"
        android:textAlignment="center"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="17dp"
        android:text="Input generalized function"
        android:textAlignment="center"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Go"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>